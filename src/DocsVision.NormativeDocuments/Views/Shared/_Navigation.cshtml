<nav class="navbar navbar-inverse navbar-fixed-top" id="mainNav">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="sr-only"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">ПАО "Самаранефтехимпроект"</a>
		</div>
		<div class="navbar-collapse collapse">
			@if (_accountService.IsSignedIn(User))
			{
				<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
					<ul class="nav navbar-nav navbar-right">
						<li>
							<a asp-area="">Добро пожаловать, @_accountService.GetUserName(User)</a>
						</li>
						<li>
							<button type="submit" class="btn btn-link navbar-btn navbar-link">Выход</button>
						</li>
					</ul>
				</form>
			}
		</div>
	</div>
